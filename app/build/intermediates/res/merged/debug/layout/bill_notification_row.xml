<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border_grey">

        <ImageView
            android:id="@+id/iv_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/airtel" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_margin_double"
            android:layout_toRightOf="@+id/iv_provider"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_provider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airtel"
                android:textColor="@color/black"
                android:textSize="@dimen/legend_size" />

            <TextView
                android:id="@+id/tv_bill_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_half"
                android:text="Bill/ Utilities"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_margin_double"
            android:layout_marginRight="@dimen/default_margin_double"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_amount_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/default_margin_half"
                android:drawableLeft="@drawable/r_2"
                android:drawablePadding="@dimen/default_margin"
                android:text="2000.97"
                android:textColor="@color/black"
                android:textSize="@dimen/legend_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bill_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 june 2015,"
                    android:textColor="@color/login_background"
                    android:textSize="@dimen/smaller_text" />

                <TextView
                    android:id="@+id/tv_bill_due_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="11:59 pm"
                    android:textColor="@color/login_background"
                    android:textSize="@dimen/smaller_text" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/uninor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin_double"
            android:layout_toRightOf="@+id/iv_default"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_msg_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vf care"
                android:textColor="@color/black"
                android:textSize="@dimen/legend_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/default_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bill_due_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 june 2015,"
                    android:textColor="@color/login_background"
                    android:textSize="@dimen/smaller_text" />

                <TextView
                    android:id="@+id/tv_bill_due_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="11:59 pm"
                    android:textColor="@color/login_background"
                    android:textSize="@dimen/smaller_text" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bill_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_default"
            android:layout_margin="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:text="For bills issued after 15 April 2015, select the tab that’s relevant to you and hover over each number for more info.For bills issued after 15 April 2015, select the tab that’s relevant to you and hover over each number for more info. "
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </RelativeLayout>
</LinearLayout><!-- From: file:/home/vinove/Desktop/Desktop/Faayda_1/app/src/main/res/layout/bill_notification_row.xml -->