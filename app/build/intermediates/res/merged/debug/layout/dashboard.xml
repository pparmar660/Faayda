<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pagerSlidingTabslll"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/tab_background"
        android:layout_height="wrap_content">

        <com.faayda.customviews.SlidingTabLayout
            android:id="@+id/pagerSlidingTabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/tab_background"
            android:foregroundGravity="center_horizontal" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pagerSlidingTabslll" />

    <LinearLayout
        android:id="@+id/llButtonBar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@color/login_background"
            android:drawableRight="@drawable/rating_icon"
            android:paddingRight="@dimen/default_margin"
            android:text="@string/rate_app"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:background="@color/share_with"
            android:drawableRight="@drawable/share_icon"
            android:paddingRight="@dimen/default_margin"
            android:text="@string/shae_with"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/llButtonBar"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/default_margin"
        android:src="@drawable/floating_add_transaction" />

</RelativeLayout><!-- From: file:/home/vinove/Desktop/Desktop/Faayda_1/app/src/main/res/layout/dashboard.xml -->