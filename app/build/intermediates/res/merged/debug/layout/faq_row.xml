<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/faq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:clickable="true"
        android:drawableRight="@drawable/faq"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_margin"
        android:text="@string/app_name"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/faq_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_margin_double"
        android:text="@string/app_name"
        android:visibility="gone"
        android:textColor="@android:color/black" />
</LinearLayout><!-- From: file:/home/vinove/Desktop/Desktop/Faayda_1/app/src/main/res/layout/faq_row.xml -->