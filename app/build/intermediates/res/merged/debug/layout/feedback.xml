<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <!--<include layout="@layout/main_toolbar" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/legend_size"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chk_bug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="@string/label_bug"
            android:textSize="@dimen/legend_size" />

        <CheckBox
            android:id="@+id/chk_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="@string/label_feature"
            android:textSize="@dimen/legend_size" />

        <CheckBox
            android:id="@+id/chk_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:text="@string/label_other"
            android:textSize="@dimen/legend_size" />


    </LinearLayout>

    <EditText
        android:id="@+id/et_comments"
        android:layout_width="match_parent"
        android:layout_height="@dimen/extraMargin"
        android:layout_marginLeft="@dimen/normal_text"
        android:layout_marginRight="@dimen/normal_text"
        android:background="@android:drawable/editbox_background_normal"
        android:gravity="start"
        android:inputType="text"
        android:maxLength="150"
        android:imeOptions="actionDone"
        android:hint="@string/label_hint"
        android:padding="@dimen/smallest_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/legend_size"
        android:text="@string/label_rateUs"
        android:textColor="@android:color/black"
        android:textSize="@dimen/legend_size" />

    <RatingBar
        android:id="@+id/btn_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3.5"
        style="@style/customRatingBar"
        android:progressDrawable="@drawable/ratingbar"
        android:layout_marginBottom="@dimen/legend_size"
        android:stepSize="0.5" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@color/login_background"
        android:text="@string/label_send"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text"
        android:textStyle="bold" />

</LinearLayout>
