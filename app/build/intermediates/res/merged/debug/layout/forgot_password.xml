<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reklative_forgot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:padding="@dimen/default_margin_double">

    <ImageView
        android:layout_marginTop="@dimen/default_margin_double"
        android:id="@+id/iv_logo_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/tv_forgot"
        android:layout_below="@id/iv_logo_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/Forgot_text"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text" />

    <TextView
        android:id="@+id/tv_forgot2"
        android:layout_below="@id/tv_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/default_margin"
        android:gravity="center_horizontal"
        android:text="@string/Forgot_text2"
        android:textColor="@color/black" />

    <LinearLayout

        android:id="@+id/linear_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forgot2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/default_margin_double">

        <EditText
            android:id="@+id/et_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text_selector_new"
            android:drawableLeft="@drawable/input_email"
            android:drawablePadding="@dimen/default_margin_half"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/default_margin"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />

        <Button
            android:id="@+id/bt_send_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_forgot_pass"
            android:layout_marginTop="@dimen/legend_size"
            android:background="@color/login_background"
            android:clickable="true"
            android:padding="12dp"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/home/vinove/Desktop/Desktop/Faayda_1/app/src/main/res/layout/forgot_password.xml -->