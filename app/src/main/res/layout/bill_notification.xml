<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bill_back"
        android:gravity="center_horizontal"
        android:padding="@dimen/default_margin_double"
        android:text="@string/new_bill"
        android:textColor="@color/light_black"
        android:textSize="@dimen/default_margin_double" />


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border_grey">

        <ImageView
            android:id="@+id/iv_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/app_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_margin_double"
            android:layout_toRightOf="@+id/iv_provider"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_provider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <TextView
                android:id="@+id/tv_bill_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_half"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/smaller_text"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_margin_double"
            android:layout_marginRight="@dimen/default_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_amount_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/default_margin_half"
                android:drawableLeft="@drawable/r_2"
                android:drawablePadding="@dimen/default_margin"
                android:text="@string/label_defaultValue"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bill_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_defaultValue"
                    android:textColor="@color/login_background"
                    android:textSize="@dimen/smallest_text" />

                <TextView
                    android:id="@+id/tv_bill_due_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/label_defaultValue"
                    android:textColor="@color/login_background"
                    android:textSize="@dimen/smallest_text" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:src="@drawable/app_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin_double"
            android:layout_toRightOf="@+id/iv_default"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_msg_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/default_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bill_due_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_defaultValue"
                    android:textColor="@color/login_background"
                    android:textSize="@dimen/smallest_text" />

                <TextView
                    android:id="@+id/tv_bill_due_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/label_defaultValue"
                    android:textColor="@color/login_background"
                    android:textSize="@dimen/smallest_text" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bill_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_default"
            android:layout_margin="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin_half"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_yes_bill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/login_background"
            android:padding="@dimen/default_margin_midium"
            android:text="@string/link_biller"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/tv_dismiss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@color/gray_add"
            android:padding="@dimen/default_margin_midium"
            android:text="@string/dismiss"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>
    >
</LinearLayout>