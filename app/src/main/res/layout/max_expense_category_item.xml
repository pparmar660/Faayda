<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <ImageView
        android:id="@+id/ivMaxExpenseCatIcon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cat_icon"
        android:adjustViewBounds="true"
        android:src="@drawable/category_medical" />

    <TextView
        android:id="@+id/ivMaxExpenseCatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_half"
        android:gravity="center"
        android:text="@string/medical"
        android:textColor="@color/expense_category_text"
        android:textSize="@dimen/smaller_text" />

    <TextView
        android:id="@+id/ivMaxExpenseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_half"
        android:drawableLeft="@drawable/spend_rupee_symbol"
        android:gravity="center"
        android:text="@string/label_defaultValue"
        android:textColor="@color/expense_category_text"
        android:textSize="@dimen/smaller_text"
        android:visibility="gone" />
</LinearLayout>