<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/default_margin"
        android:src="@drawable/logo2" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_double"
        android:background="@drawable/edit_text_selector_new"
        android:drawableLeft="@drawable/input_name"
        android:drawablePadding="@dimen/default_margin"
        android:hint="Name"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:padding="@dimen/default_margin"
        android:textColor="#000000"
        android:textColorHint="@color/edit_text" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@drawable/edit_text_selector_new"
        android:drawableLeft="@drawable/input_email"
        android:drawablePadding="@dimen/default_margin"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:padding="@dimen/default_margin"
        android:paddingLeft="3dp"
        android:textColor="#000000"
        android:textColorHint="@color/edit_text" />


    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@drawable/edit_text_selector_new"
        android:drawableLeft="@drawable/input_password_2"
        android:drawablePadding="@dimen/default_margin"
        android:hint="Password"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:maxLength="50"
        android:padding="@dimen/default_margin"
        android:paddingLeft="3dp"
        android:textColor="#000000"
        android:textColorHint="@color/edit_text" />


    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@drawable/edit_text_selector_new"
        android:drawableLeft="@drawable/input_password_2"
        android:drawablePadding="@dimen/default_margin"
        android:hint="Confirm Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="50"
        android:padding="@dimen/default_margin"
        android:paddingLeft="3dp"
        android:textColor="#000000"
        android:textColorHint="@color/edit_text" />


    <CheckBox
        android:id="@+id/ck_signed_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:button="@drawable/gray_checkbox_design"
        android:paddingBottom="@dimen/default_margin_half"
        android:paddingLeft="@dimen/default_margin_midium"
        android:paddingTop="@dimen/default_margin_half"
        android:text="@string/keep_me"
        android:textColor="@color/gray_add" />

    <LinearLayout
        android:id="@+id/agree_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_double"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ck_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/gray_checkbox_design"
            android:padding="@dimen/default_margin_half"
            android:textColor="@color/gray_add" />

        <TextView
            android:id="@+id/txt_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin_half"
            android:textColor="@color/gray_add" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_btn_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_double"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/bt_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/login_background"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_weight="1"
            android:background="@color/calcel"
            android:text="@string/cancel"
            android:textColor="@color/gray"
            android:textSize="@dimen/normal_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="@dimen/legend_size"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/default_margin"
            android:src="@drawable/lock" />

        <TextView
            android:id="@+id/tv_encryption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/encryption"
            android:textColor="@color/black"
            android:textSize="@dimen/smaller_text" />
    </LinearLayout>
    >
</LinearLayout>